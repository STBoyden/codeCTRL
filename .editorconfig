# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8

[*.json]
indent_size = 2

[*.sh]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false

[**.rs]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false
